<div class="row valign-wrapper">
  <div class="col s12 valign" id="dsplPos">
    <div class="card hoverable" id="big-window">
      <div class="card-content white-text" id="chatroom-card">

        {{!-- instead of handle form, pull user name --}}
        {{!-- <div title="Log in to change usernames">User Name: <span id="handle" type="text" placeholder="Handle">{{name}}</span></div> --}}
        <h6 title="Go to login to change users"><strong>User: </strong><span id="handle" type="text" placeholder="Handle">{{name}}</span> </h6>

        <div id="chat-window">
          {{!-- NTA color coding for output/feedback; round these corners!! --}}
            {{#each litty}}
            {{!-- {{this.createdAt}} --}}
            <p><strong>{{this.name}} :</strong> {{{this.message}}} </p>
            {{/each}}
          <div class="output-div blue" id="output"></div></div>
          <div class="feedback-div green center" id="feedback"></div>
        <div class="card-action row" id="message-input-div">
          <input id="message" type="text" placeholder="Message" />
          <button class="col s10 offset-s1 waves-effect waves-light btn" id="sendIt">SEND IT</button>
        </div>
        <ul class="collapsible">
          <li>
            <div class="collapsible-header green hoverable"><i class="material-icons">emoji_emotions</i>Emojis</div>
            <div class="collapsible-body emoji-body">
              {{!-- scrollable emoji menu goes here --}}
              <div class="row">
                <div class="col">
                  <p class="center">Click an emoji to add it to message field!</p>
                  <br>
                  <div class="emoji-scroll center" id="emojiSpot"></div>
                </div>
              </div>
            </div>
          </li>
          <li>
            <div class="collapsible-header red hoverable"><i class="material-icons">gif</i>Giphy</div>
            <div class="collapsible-body">
              {{!-- giphy search bar and results --}}
              <form id="topic-form">
                <p for="topic-input">&darr;SEARCH GIFS&darr;</p>
                <input type="text" id="search-bar">
                <button class="waves-effect waves-light btn" id="search">SEARCH!</button>
              </form>
              <div class="row">
                <div class="col">
                  <div class="giphy-scroll" id="topics-view"></div>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div> 