<div class="row valign-wrapper">
  <div class="col s8 offset-s2 valign">
    <div class="card hoverable blue-grey darken-1 center">
      <div class="card-content white-text">
        <h1 class="card-title"><i class="small material-icons">person_add</i> Register</h1>

        <form action="/users/register" method="POST">
        {{!-- name form --}}
          <div class="input-field hoverable">
            {{!-- when changing <input type="name"> bug on input field appears overiding materialize css, fized by type="text" check with scott for conflicts --}}
            <input placeholder="Enter Name" id="name" type="text" class="validate center">
            <label for="name">
              <p>Name:</p>
            </label>
          </div>
        {{!-- email form --}}
          <div class="input-field hoverable">
            <input placeholder="Enter your email address" id="email" type="email" class="validate center">
            <label for="email">
              <p>Email:</p>
            </label>
          </div>
        {{!-- password form --}}
          <div class="input-field hoverable">
            <input placeholder="Create Password" id="password" type="text" class="validate center">
            <label for="password">
              <p>Password:</p>
            </label>
          </div>
        {{!-- confirm password form --}}
          <div class="input-field hoverable">
            <input placeholder="Confirm Password" id="password2" type="text" class="validate center">
            <label for="password2">
              <p>Confirm Password:</p>
            </label>
          </div>

      </div>
      <div class="card-action">
        {{!-- submit button  --}}
        <button type="submit" class="waves-effect waves-light btn-large hoverable">REGISTER</button>
        </form>
        <br>
        <br>
        {{!-- already have an acct? --}}
        <p class="lead mt-4">Already have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>


